{% extends "admins/admins_main.twig" %}

{% block right_column %}
<div class="col-md-4">
<ol id="breadcrumb">
  <li><a href="/diploma/admins/">Административный раздел</a></li>
  <li class="current"><a href="">Управление администраторами</a></li>
</ol>
<br>
  <a href="/diploma/user/create" class="btn btn-primary">Создать админа</a>
<br><br>
<table class="table table-hover table-bordered">
  <thead>
    <tr class="success">
      <th>Id #</th>
      <th>Имя / логин</th>
      <th>Действия с администраторами</th>
    </tr>
  </thead>
  <tbody>

  {% for user in users %}
    <tr>
      <td>{{user.id}}</td>
      <td>{{user.login}}</td>
      <td><a href="/diploma/user/update/{{user.id}}">сменить пароль</a> &nbsp;&nbsp;&nbsp;|
          &nbsp;&nbsp;&nbsp; <a href="/diploma/user/delete/{{user.id}}">удалить админа</a></td>
    </tr>
  {% endfor %}

  </tbody>
</table>
</div>
{% endblock right_column %}
