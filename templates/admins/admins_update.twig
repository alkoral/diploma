{% extends "admins/admins_main.twig" %}
{% block title %}Смена пароля администратора{% endblock title %}
{% block right_column %}
<div class="col-md-6">

<ol id="breadcrumb">
  <li><a href="/diploma/admins/">Административный раздел</a></li>
  <li><a href="/diploma/user/list/">Управление администраторами</a></li>
  <li class="current"><a href="">Изменение пароля</a></li> 
</ol>
<br>

<h4>Изменить пароль администратора</h4>
  {% for message in messages %}
    <h5><font color=blue>{{message}}</font></h5>
  {% endfor %}
  <br>
  <form class="form-inline" method="POST" action="">
  {% for user in users %}
    <div class="form-group">
      <input type="hidden" class="form-control" name="id" value="{{user.id}}">
    </div>
    <div class="form-group">
      <label>Логин</label>&nbsp;
      <input type="text" class="form-control" name="login" maxlength="30" placeholder="" value="{{user.login}}" readonly>&nbsp;
    </div>
    <div class="form-group">
      <label>Пароль</label>&nbsp;
      <input type="password" class="form-control" name="password" maxlength="50" placeholder="Введите новый пароль" value="" required> &nbsp;
    </div>
      <button type="submit" class="btn btn-primary" name="submit">Изменить</button>
  {% endfor %}
  </form>
</div>
{% endblock right_column %}
