{% extends "admins/admins_main.twig" %}
{% block title %}Создание администратора{% endblock title %}
{% block right_column %}
<div class="col-md-6">

<ol id="breadcrumb">
  <li><a href="/diploma/admins/">Административный раздел</a></li>
  <li><a href="/diploma/user/list/">Управление администраторами</a></li>
  <li class="current"><a href="">Создание админа</a></li> 
</ol>
<br>

<h4>Создать нового администратора</h4>
  {% for message in messages %}
    <h5><font color=blue>{{message}}</font></h5>
  {% endfor %}
	<br>
	<form class="form-inline" method="POST" action="">
		<div class="form-group">
			<label>Логин</label>&nbsp;
			<input type="text" class="form-control" name="login" maxlength="30" placeholder="Введите логин" value="" required> &nbsp;
		</div>
		<div class="form-group">
			<label>Пароль</label>&nbsp;
			<input type="password" class="form-control" name="password" maxlength="50" placeholder="Введите пароль" value="" required> &nbsp;
		</div>
			<button type="submit" class="btn btn-primary" name="submit">Создать</button>
	</form>

</div>
{% endblock right_column %}
